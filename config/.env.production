# Application
# Name of the application in production environment
APP_NAME=appname
# Port where the application will run
APP_PORT=80
# Environment setting (should be 'production' for production deployment)
APP_ENV=production

# Nginx
# Port where Nginx will listen for incoming requests
NGINX_PORT=80
# Number of Nginx worker processes (auto = one per CPU core)
NGINX_WORKER_PROCESSES=auto
# Maximum number of connections each worker process can handle
NGINX_WORKER_CONNECTIONS=1024

# Node
# Node.js version for the production container
NODE_VERSION=20-alpine
# Node environment (should be 'production' for optimized builds)
NODE_ENV=production

# Build
# Target environment for the build process
BUILD_TARGET=production
# Enable production optimizations for smaller bundles
BUILD_OPTIMIZATION=true

# Security
# Nginx process user name
NGINX_USER=nginx
# Nginx process group name
NGINX_GROUP=nginx
# Nginx user ID for file permissions
NGINX_UID=1001
# Nginx group ID for file permissions
NGINX_GID=1001

