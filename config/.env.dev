# Application
# Name of the application used for container naming and identification
APP_NAME=appname
# Current environment (development/staging/production)
APP_ENV=development

# Node
# Node.js version to use in the Docker container
NODE_VERSION=20-alpine
# Node environment setting (affects module behavior)
NODE_ENV=development

# Development Server
# Port number where the development server will listen
DEV_PORT=3000
# Host address to bind the development server
DEV_HOST=0.0.0.0
# File watching poll interval in milliseconds (for hot reloading)
DEV_POLL=2000

# Development Tools
# User name inside the Docker container
DEV_USER=node
# Group name inside the Docker container
DEV_GROUP=node
# User ID for file permissions
DEV_UID=1000
# Group ID for file permissions
DEV_GID=1000

# Git
# Default Git branch for development
GIT_BRANCH=dev

# Add your custom environment variables below:
# Database Configuration
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=your_database
# DB_USER=your_username
# DB_PASSWORD=your_password

# API Keys and External Services
# API_KEY=your_api_key
# EXTERNAL_SERVICE_URL=https://api.example.com

# Security
# JWT_SECRET=your_jwt_secret
# SESSION_SECRET=your_session_secret

# Cache and Storage
# REDIS_URL=redis://localhost:6379
# S3_BUCKET=your_bucket_name
# AWS_ACCESS_KEY=your_access_key
# AWS_SECRET_KEY=your_secret_key

# Email Configuration
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_username
# SMTP_PASSWORD=your_smtp_password

# Logging and Monitoring
# LOG_LEVEL=debug
# SENTRY_DSN=your_sentry_dsn
